generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  user_id  Int?
  username String
  password String
  avatar   String?
  status   Status    @default(ACTIVE)
  datetime DateTime  @default(now())
  email    String
  sessions Session[]

  @@index([user_id], map: "user_user_id_fkey")
  @@map("users")
}

model Session {
  id        String   @id @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "sessions_userId_fkey")
  @@map("user_sessions")
}

model Access {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  pinCode   String
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@map("clients")
}

model SensorData {
  id          Int      @id @default(autoincrement())
  moisture    Int
  temperature Float
  distance    Float
  // Instead of one "motion", define four motion fields:
  motion1     Boolean  @default(false)
  motion2     Boolean  @default(false)
  motion3     Boolean  @default(false)
  motion4     Boolean  @default(false)

  createdAt   DateTime @default(now())
}

enum Status {
  ACTIVE
  INACTIVE
}


model GuestRequest {
  id        Int      @id @default(autoincrement())
  category  String
  message   String
  villa     String   @default("1")
  email     String   @default("test@email.coom")
  status    String   @default("pending")
  createdAt DateTime @default(now())
}

model LockBox {
  id     Int     @id @default(1)  
  status Boolean @default(false)
}

